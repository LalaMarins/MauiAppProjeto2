<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppProjeto2.Views.RegisterPage"
             Title="RegisterPage">
    
    <VerticalStackLayout Padding="20" Spacing="10" VerticalOptions="Center">

        <Label Text="Nome:" />
        <Entry x:Name="txtNome" Placeholder="Digite seu nome completo"/>

        <Label Text="Data de Nascimento:" />
        <DatePicker x:Name="dpNascimento" />

        <Label Text="E-mail:" />
        <Entry x:Name="txtEmail" Placeholder="exemplo@email.com" Keyboard="Email"/>

        <Label Text="Senha:" />
        <Entry x:Name="txtSenha" Placeholder="MÃ­nimo 6 caracteres" IsPassword="True"/>

        <Button x:Name="btnCadastrar" Text="Cadastrar" />

    </VerticalStackLayout>
</ContentPage>