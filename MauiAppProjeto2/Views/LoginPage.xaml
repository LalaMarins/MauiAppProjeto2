<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppProjeto2.Views.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout Padding="20" Spacing="10" VerticalOptions="Center">

        <Label Text="App de Clima" FontSize="28" HorizontalOptions="Center"/>

        <Label Text="E-mail:" />
        <Entry x:Name="txtEmail" Placeholder="Digite seu e-mail" Keyboard="Email"/>

        <Label Text="Senha:" />
        <Entry x:Name="txtSenha" Placeholder="Digite sua senha" IsPassword="True"/>

        <Button x:Name="btnLogin" Text="Entrar" />

        <Button x:Name="btnRegistrar" Text="NÃ£o tenho conta (Cadastre-se)" />

    </VerticalStackLayout>
</ContentPage>