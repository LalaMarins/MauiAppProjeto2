<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppProjeto2.Views.WeatherPage"
             Title="Previsão do Tempo">

    <VerticalStackLayout Padding="20" Spacing="15" VerticalOptions="Center">

        <Label Text="Consultar Clima" FontSize="24" HorizontalOptions="Center" FontAttributes="Bold"/>

        <Entry x:Name="txtCidade" Placeholder="Digite o nome da cidade (ex: Jaú)" />

        <Button x:Name="btnBuscar" Text="Ver Previsão" />

        <Frame CornerRadius="10" Padding="10">
            <VerticalStackLayout Spacing="5">
                <Label x:Name="lblCidade" Text="Cidade: -" FontSize="18" FontAttributes="Bold"/>
                <Label x:Name="lblTemperatura" Text="Temperatura: -" FontSize="16"/>
                <Label x:Name="lblDescricao" Text="Condição: -" FontSize="16"/>
                <Label x:Name="lblData" Text="Data: -" FontSize="12" TextColor="Gray"/>
            </VerticalStackLayout>
        </Frame>

    </VerticalStackLayout>

</ContentPage>